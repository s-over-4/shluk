#!/bin/sh

help_msg="Usage:\n\tshluk [option]\n\nControls the thinklight.\n\nOptions:\n\ton\t\t\t\tturn light on\n\toff\t\t\tturn light off\n\ttoggle\t\ttoggle light on/off\n\tstatus\t\tgive current status of light, either 'on' or 'off'\n\thelp\t\t\tprint this help message"; [ $1 ] && (([ $1 = "on" ] && echo 1 > /sys/class/leds/tpacpi\:\:thinklight/brightness) || ([ $1 = "off" ] && echo 0 > /sys/class/leds/tpacpi\:\:thinklight/brightness) || ([ $1 = "toggle" ] && ([ 0 = $(cat /sys/class/leds/tpacpi\:\:thinklight/brightness) ] && (echo 1 >/sys/class/leds/tpacpi\:\:thinklight/brightness) || (echo 0 >/sys/class/leds/tpacpi\:\:thinklight/brightness))) || ([ $1 = "status" ] && ([ 0 = $(cat /sys/class/leds/tpacpi\:\:thinklight/brightness) ] && (echo "off") || (echo "on"))) || ([ $1 = "help" ] && (echo $help_msg)) || echo "unknown option $1.") || (echo $help_msg && exit) 
